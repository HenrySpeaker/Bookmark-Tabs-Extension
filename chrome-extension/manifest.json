{
    "manifest_version": 3,
    "name": "Bookmark All Tabs",
    "description": "Bookmark all or some open tabs. Choose where the bookmarks are saved. Open previously saved bookmarks in new windows.",
    "version": "0.0.1",
    "icons": {
        "16": "icons/bookmark-16.png",
        "32": "icons/bookmark-32.png",
        "48": "icons/bookmark-48.png",
        "128": "icons/bookmark-128.png"
    },
    "action": {
        "default_icon": "icons/bookmark-128.png",
        "default_popup": "pages/menu.html"
    },
    "permissions": ["bookmarks", "storage", "tabs"]
  }